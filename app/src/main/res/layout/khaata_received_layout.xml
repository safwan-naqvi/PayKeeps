<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_margin="3dp"
    android:padding="16dp"
    android:elevation="1dp"
    android:background="@drawable/round_button_two">

    <ImageView
        android:id="@+id/received_payment_ico"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/received_amount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/received_payment_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/open_extrabold"
        android:gravity="left"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/received_payment_ico"
        app:layout_constraintTop_toTopOf="@+id/received_payment_ico" />

    <TextView
        android:id="@+id/received_payment_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/proxima_nova"
        android:gravity="left"
        android:text="Reason"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/received_payment_ico"
        app:layout_constraintTop_toBottomOf="@+id/received_payment_date" />

    <TextView
        android:id="@+id/received_payment_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_extrabold"
        android:gravity="right"
        android:text="14000/-"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/received_payment_ico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/received_payment_ico"
        app:layout_constraintTop_toBottomOf="@+id/received_payment_reason" />

</androidx.constraintlayout.widget.ConstraintLayout>